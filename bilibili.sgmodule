# name: 麻吉修改白哔自用版
# description: 深度净化B站广告，精简界面，解锁部分功能。原作者Maasea, kokoryh, RuCu6, 可莉🅥。搭配薯条biliAdblock达到自用完美效果。
# author: Maasea, kokoryh, RuCu6, 可莉🅥 (Converted by Gemini)
# home-page: https://github.com/luestr/ProxyResource/blob/main/README.md
# update-time: 2025-07-06 23:06:22
# icon: https://raw.githubusercontent.com/luestr/IconResource/main/App_icon/120px/Bilibili.png
# tag: 去广告

[General]
# > [动态]中[最常访问]的显示方式。
# > auto：仅当列表中存在直播状态时显示；show：始终显示；hide：始终隐藏。
showUpList = hide

# > 移除评论区置顶广告 (true/false)
filterTopReplies = true

# > 空降助手自动版 (true/false)
airborne = true

# > 空降助手弹幕版 (true/false)，弹幕版仅限iPad版开启
airborneDm = false

[MITM]
hostname = grpc.biliapi.net, app.bilibili.com, api.bilibili.com, api.live.bilibili.com

[Rule]
# 备用域名
DOMAIN, api.biliapi.com, REJECT
DOMAIN, api.biliapi.net, REJECT
DOMAIN, app.biliapi.com, REJECT
DOMAIN, app.biliapi.net, REJECT
DOMAIN-SUFFIX, chat.bilibili.com, REJECT

[Rewrite]
# 移除开屏广告
^https:\/\/app\.bilibili\.com\/x\/v2\/splash\/(list|show|event\/list2)\? type=response-body, body-transformer=json-jq, value='.data |= with_entries(if .key | IN("show", "event_list") then .value = [] else . end)'

# 移除首页推荐广告
^https:\/\/app\.bilibili\.com\/x\/v2\/feed\/index\? type=response-body, body-transformer=json-jq, value='if .data.items then .data.items |= map(select((.banner_item == null) and (.ad_info == null) and (.card_goto == "av") and (.card_type | IN("small_cover_v2", "large_cover_single_v9", "large_cover_v1")))) end'

# 播放页开通会员的横幅
^https:\/\/api\.bilibili\.com\/pgc\/activity\/deliver\/material\/receive\? type=mock, status=200, content='{"code":0,"data":{"closeType":"close_win","container":[],"showTime":""},"message":"success"}', force-media-type='application/json'
^https:\/\/api\.bilibili\.com\/pgc\/view\/v2\/app\/season\? type=response-body, body-transformer=json-jq, value='del(.data.payment)'

# 移除观影页广告
^https:\/\/api\.bilibili\.com\/pgc\/page\/(bangumi|cinema\/tab)\? type=response-body, body-transformer=json-jq, value='.result.modules |= if . then map(if (.style | startswith("tip")) or (.module_id | IN(241, 1283, 1441, 1284)) then .items = [] elif .style | startswith("banner") then .items |= if . then map(select(.link | contains("play"))) else [] end elif .style | startswith("function") then .items |= if . then map(select(.blink | startswith("bilibili"))) else [] end end) end'

# 移除竖屏视频广告
^https:\/\/app\.bilibili\.com\/x\/v2\/feed\/index\/story\? type=response-body, body-transformer=json-jq, value='if .data.items then .data.items |= map(select((.ad_info == null) and (.card_goto | startswith("ad") | not)) | del(.story_cart_icon, .free_flow_toast)) end'

# 移除大会员广告、移除右上角活动入口
^https:\/\/ap[ip]\.bilibili\.com\/x\/(resource\/(top\/activity|patch\/tab)|v2\/search\/square|vip\/ads\/materials)\? type=mock, status=200, content='{"code":-404,"message":"-404","ttl":1,"data":null}', force-media-type='application/json'

# 移除直播间广告
^https:\/\/api\.live\.bilibili\.com\/xlive\/(app-interface\/v2\/index\/feed|app-room\/v1\/index\/getInfoBy(Room|User))\? type=response-body, body-transformer=json-jq, value='.data |= (del(.play_together_info, .play_together_info_v2, .activity_banner_info) | if .function_card then .function_card[] = null end | if .new_tab_info.outer_list then .new_tab_info.outer_list |= map(select(.biz_id != 33)) end | if .card_list then .card_list |= map(select(.card_type | IN("banner_v2", "activity_card_v1") | not)) end | reduce ([["show_reserve_status"], false], [["reserve_info", "show_reserve_status"], false], [["shopping_info", "is_show"], 0]) as [$path, $value] (.; if getpath($path) then setpath($path; $value) end))'

# 直播间购物广告
^https:\/\/api\.live\.bilibili\.com\/xlive\/e-commerce-interface\/v1\/ecommerce-user\/get_shopping_info\? type=mock, content='{}', force-media-type='application/json'

# 移除皮肤推送
^https:\/\/app\.bilibili\.com\/x\/resource\/show\/skin\? type=response-body, body-transformer=json-jq, value='del(.data.common_equip)'

# 精简我的页面
^https:\/\/app\.bilibili\.com\/x\/v2\/account\/mine(?:\/ipad)?\? type=response-body, body-transformer=json-jq, value='.sections_v2 |= map(if .title == "创作中心" then .items |= map(select(.id | IN(17, 18, 19, 20, 21))) elif .id | IN(428, 431, 494, 495, 496, 497) then .items = [] elif .id | IN(429, 430, 432, 434) then .style = 99 else . end) | del(.sections_v2[] | select(.id == 433 or .title == "推荐服务" or .title == "更多服务")) | del(.data.live_tip, .data.notice, .data.vip_section, .data.creative_center_v2, .data.vip.mall_coupon_info, .data.vip.coupon_info)'

# 非会员开启会员专属清晰度
^https:\/\/app\.bilibili\.com\/x\/v2\/account\/myinfo\? type=response-body, body-transformer=json-jq, value='.data.vip |= if . != null and .status == 0 then . + { status: 1, type: 2, due_date: 9005270400000, role: 15 } else . end'

# 移除青少年模式弹窗
^https:\/\/(grpc\.biliapi\.net|app\.bilibili\.com)\/bilibili\.app\.interface\.v1\.Teenagers\/ModeStatus$ type=mock, content_base64='AAAAABMKEQgCEgl0ZWVuYWdlcnMgAioA'

# 移除搜索填充词
^https:\/\/(?:grpc\.biliapi\.net|app\.bilibili\.com)\/bilibili\.app\.interface\.v1\.Search\/DefaultWords$ type=mock, content_base64=''

# 移除免流广告
^https:\/\/(grpc\.biliapi\.net|app\.bilibili\.com)\/bilibili\.app\.view\.v1\.View\/TFInfo$ type=mock, content_base64='AAAAAAIIAQ=='

[Script]
# 空降助手自动版
^https:\/\/(grpc\.biliapi\.net|app\.bilibili\.com)\/bilibili\.app\.playerunite\.v1\.Player\/PlayViewUnite$ type=http-request, script-path=https://kelee.one/Resource/Script/Bilibili/Bilibili_airborne_kokoryh.js, requires-body=true, argument="airborne=%$General.airborne%"

# 空降助手弹幕版
^https:\/\/(grpc\.biliapi\.net|app\.bilibili\.com)\/bilibili\.community\.service\.dm\.v1\.DM\/DmSegMobile$ type=http-request, script-path=https://kelee.one/Resource/Script/Bilibili/Bilibili_airborne_kokoryh.js, requires-body=true, argument="airborneDm=%$General.airborneDm%"

# Proto处理
^https:\/\/(grpc\.biliapi\.net|app\.bilibili\.com)\/bilibili\.(app\.(show\.v1\.Popular\/Index|dynamic\.v2\.Dynamic\/DynAll|view(unite)?\.v1\.View\/(View|ViewProgress|RelatesFeed)|playurl\.v1\.PlayURL\/PlayView|playerunite\.v1\.Player\/PlayViewUnite)|polymer\.app\.search\.v1\.Search\/SearchAll|community\.service\.dm\.v1\.DM\/DmView|main\.community\.reply\.v1\.Reply\/MainList|pgc\.gateway\.player\.v2\.PlayURL\/PlayView)$ type=http-response, script-path=https://kelee.one/Resource/Script/Bilibili/Bilibili_proto_kokoryh.js, requires-body=true, argument="showUpList=%$General.showUpList%&filterTopReplies=%$General.filterTopReplies%&airborneDm=%$General.airborneDm%"


